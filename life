const WHATSAPP_NUMBER='573001234567';
function ordenarWhatsApp(producto,precio){
const mensaje=`üõí *QUIERO ORDENAR*%0A%0Aüì¶ Producto: ${producto}%0Aüí∞ Precio: $${formatPrecio(precio)} COP%0Aüí≥ Pago: Contraentrega%0A%0APor favor env√≠ame informaci√≥n y confirmo con:%0A- Nombre completo%0A- Direcci√≥n%0A- Ciudad%0A- Tel√©fono`;
